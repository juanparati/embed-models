{
    "name": "juanparati/embed-models",
    "description": "Embed sub-models inside JSON fields in Laravel Eloquent models with full casting, validation, and mass assignment support",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Juan Lago",
            "email": "juanparati@gmail.com"
        }
    ],
    "keywords": [
        "eloquent", "models", "sub-models", "json", "embed", "embed-models"
    ],
    "require": {
        "php": "^8.2",
        "illuminate/database": "^12.0",
        "illuminate/support": "^12.0",
        "illuminate/validation": "^12.0"
    },
    "require-dev": {
        "orchestra/testbench": "^10.0",
        "mockery/mockery": "^1.5",
        "laravel/pint": "^1.25",
        "pestphp/pest": "^4.1"
    },
    "autoload": {
        "psr-4": {
            "Juanparati\\EmbedModels\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Juanparati\\EmbedModels\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "pint": "vendor/bin/pint"
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
